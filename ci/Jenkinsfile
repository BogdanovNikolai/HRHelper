pipeline {
  agent any
  environment {
    DOCKER_IMAGE = "myorg/hr-helper:${env.BUILD_NUMBER}"
    DB_CREDS = credentials('postgres-db-credentials')
    REDIS_URL = 'redis://redis:6379/0'
    RABBITMQ_URL = 'amqp://guest:guest@rabbitmq:5672/'
  }
  stages {
    stage('Lint & Test') {
      steps {
        script {
          // Start all services in the background
          sh 'docker-compose -f docker/docker-compose.yml up -d'
          // Wait for the API to be healthy
          sh '''
          for i in {1..30}; do
            if docker-compose -f docker/docker-compose.yml exec -T app curl -s http://localhost:8000/health | grep ok; then
              echo "API is healthy!"
              break
            fi
            echo "Waiting for API..."
            sleep 2
          done
          '''
          // Run tests inside the app container
          sh 'docker-compose -f docker/docker-compose.yml exec -T app pytest --maxfail=1 --disable-warnings'
          // Run linting inside the app container
          sh 'docker-compose -f docker/docker-compose.yml exec -T app flake8 .'
          // Tear down
          sh 'docker-compose -f docker/docker-compose.yml down -v'
        }
      }
    }
    stage('Build Docker') {
      steps {
        sh 'docker build -t $DOCKER_IMAGE -f docker/Dockerfile .'
      }
    }
    stage('Migrate DB') {
      steps {
        sh 'alembic upgrade head'
      }
    }
    stage('Push Image') {
      steps {
        sh 'docker push $DOCKER_IMAGE'
      }
    }
    stage('Deploy') {
      steps {
        sh 'docker-compose -f docker/docker-compose.yml up -d'
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: '**/logs/*.log', allowEmptyArchive: true
    }
  }
} 